<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/css/adminBooks.css" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
			crossorigin="anonymous"
		/>
		
		<title>Books</title>
	</head>
	<body>
		<nav class="navbar navbar-expand-lg bg-body-tertiary">
			<div class="container-fluid">
				<a class="navbar-brand" href="/">Library</a>
				<button
					class="navbar-toggler"
					type="button"
					data-bs-toggle="collapse"
					data-bs-target="#navbarSupportedContent"
					aria-controls="navbarSupportedContent"
					aria-expanded="false"
					aria-label="Toggle navigation"
				>
					<span class="navbar-toggler-icon"></span>
				</button>
				<form action="/makeAdmin" method="GET">
					<input type="hidden" name="username" value="<%= username %>" />
					<button type="submit" class="btn-primary btn">
						Make New Admin
					</button>
				</form>
				<form action="/logout" method="GET">
					<input type="hidden" name="username" value="<%= username %>" />
					<button type="submit" class="btn-primary btn">
						Logout
					</button>
				</form>			</div>
		</nav>
		<div class="container">
			<h1 class="text-center mt-3 mb-3"><%= title %></h1>
			<div class="card">
				<div class="card-header">
					<div class="row">
						<div class="col"><h4>Available Books</h4></div>
						<div class="col">
							<form action="/admin/addBook" method="GET">
								<input type="hidden" name="username" value="<%= username %>" />
								<button type="submit" class="btn-primary btn">
									Add New Book
								</button>
							</form>	
						</div>
					</div>
				</div>
				<div class="card-body">
							<% if(sampleData.length > 0) 
							{ sampleData.forEach(function(data){
							%>
							<div class="col-md-4 p-2">
							<div class="card " style="width: 18rem">
								<div class="card-body">
									<h5 class="card-title"><%= data.title %></h5>
								</div>
								<ul class="list-group list-group-flush">
									<li class="list-group-item">Author: <%= data.author %></li>
									<li class="list-group-item">
										No. of copies: <%= data.quantity %>
									</li>
								</ul>
								<div class="card-body">
									<form action="/addQty" method="POST">
										<div class="input-group mb-3">
											<input
												type="hidden"
												name="bookID"
												value="<%= data.book_id %>"
												class="form-control"
											/>
											<input
												type="number"
												name="quantity"
												min="1"
												required
												class="form-control"
												placeholder="Enter Quantity"
												aria-label="Example text with button addon"
												aria-describedby="button-addon1"
											/>
											<input
											type="hidden"
											name="username"
											value="<%= username %>"
											class="form-control"
										/>
											<button
												class="btn btn-outline-secondary"
												type="submit"
												id="button-addon1"
											>
												Add
											</button>
										</div>
									</form>
									<form action="/delete" method="POST">
										<div class="input-group mb-3">
											<input
												type="hidden"
												name="bookID"
												value="<%= data.book_id %>"
												class="form-control"
											/>
											<input
												type="number"
												name="quantity"
												min="1"
												max="<%= data.quantity %>"
												required
												class="form-control"
												placeholder="Enter Quantity"
												aria-label="Example text with button addon"
												aria-describedby="button-addon1"
											/>
											<input
											type="hidden"
											name="username"
											value="<%= username %>"
											class="form-control"
										/>
											<button
												class="btn btn-outline-secondary"
												type="submit"
												id="button-addon1"
											>
												Delete
											</button>
										</div>
									</form>
								</div>
							</div>
						</div>

							<% }); } else { %>
								<h1>No Data Found</h1>
							<% } %>
				</div>
		</div>
		<form action="/admin/requests" method="GET">
			<input type="hidden" name="username" value="<%= username %>" />
			<button type="submit" class="btn-primary btn-lg btn m-lg-5" >
				View Requests
			</button>
		</form>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
			crossorigin="anonymous"
		></script>
		
	</body>
</html>
